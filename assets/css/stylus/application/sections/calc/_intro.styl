.calc {
    &__intro {

        .intro {

            &-swiper {
                left-width = 600px;
                left-width-md = 500px;

                height: auto;

                &-image {
                    width: 'calc(100% - %s)' % left-width;
                    @media screen and (max-width: media-md) {
                        width: 'calc(100% - %s)' % left-width-md;
                    }
                    @media screen and (max-width: media-sm) {
                        width: 100%;
                    }
                }

                &-left {
                    width: left-width;
                    @media screen and (max-width: media-md) {
                        width: left-width-md;
                    }
                    @media screen and (max-width: media-sm) {
                        width: 100%;
                    }

                    &-inner {
                        padding-gutter = 30px;

                        max-width: unset;
                        padding: 80px padding-gutter;
                        @media screen and (max-width: media-sm) {
                            padding: padding-gutter;
                        }
                    }
                }

                &-text {
                    @media screen and (max-width: media-sm) {
                        padding-left: 0px;
                        padding-right: 0px;
                    }

                    ul {
                        flex-direction: column;

                        > li {
                            width: 100%;
                            color: rgb(197, 197, 197);
                        }
                    }
                }
            }

        }

        &-back {
            color: color-brown;
            position: relative;
            display: flex;
            align-items: center;
            text-transform: uppercase;
            font-weight: 600;
            font-size: 10px;
            line-height: 10px;
            letter-spacing: 0.3em;
            margin: 0 0 30px 0;
            @media screen and (max-width: media-sm) {
                display: inline-flex;
            }

            &::before {
                content: '';
                width: 28px;
                height: 9px;
                background: url('images/breadcrumb-arrow.png') center center no-repeat;
                display: inline-block;
                margin: 0 6px 0 0;
                position: relative;
                top: -1px;
                transition: transform 0.3s ease;
                will-change: transform;
            }

            &:hover {
                &::before {

                }
            }
        }
    }
}
