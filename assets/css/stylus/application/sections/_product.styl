.product
    product-column-left     = 1000px
    product-column-height   = 600px
    display block
    margin 0 0 30px 0

    h1
        font-size 48px
        line-height 60px
        margin 0 0 50px 0


    &__row
        flexs()

        &-start
            margin-bottom 30px

        &-left
            width product-column-left

        &-right
            width 'calc(100% - %s)' % product-column-left
            padding-left 60px

        &-gallery
            flexs()
            height product-column-height

            &-params
                width 130px
                background-color background-grey
                padding 0 17px
                text-align center
                margin-left auto

                .svg
                    height 27px
                    margin 0 0 17px 0

                ul
                    flexs()
                    flex-flow column nowrap
                    justify-content space-between
                    height 100%

                    > li
                        flexs(center-vertical)
                        justify-content center
                        height 33.322%
                        border-bottom 1px solid #c8c8c8

                        &:last-child
                            border none

                        span
                            color color-brown
                            display block
                            font-size 12px
                            font-weight 500

                        strong
                            display block
                            color #393939
                            font-size 12px
                            line-height 12px
                            margin 0 0 10px 0

            &-swiper
                width calc(100% - 160px)
                height 100%
                position relative

                .carousel
                    height 100%
                    position relative
                    z-index 1

                .swiper-controls
                    position absolute
                    z-index 3
                    bottom 30px
                    right 30px
                    flexs(center-vertical)

                    *
                        position relative
                        left auto
                        right auto
                        top auto
                        bottom auto
                        margin 0

                    .swiper-pagination
                        text-align center
                        width 60px
                        font-size 11px
                        font-weight 700
                        color #fff

                .swiper-slide

                    a
                        display flex
                        height 100%
                        align-items center
                        justify-content center
                        //max-height 500px

                    img
                        //width 100%
                        //height 100%
                        //imagecover()
                        position relative
                        object-fit contain
                        width 100%
                        height 100%
                        max-height 500px
                        //top 50%
                        //left 50%
                        //transform translateX(-50%) translateY(-50%)
                        //height 100%


        &-detail
            height 100%
            flexs()
            flex-flow column nowrap
            justify-content space-between

            &-header
                border-bottom 1px solid #d2d2d2
                padding 0 0 40px 0

            &-footer
                padding 20px 0

        &-price
            color #393939

            small
                display block
                font-size 12px
                line-height 12px
                font-weight 600
                margin 0 0 16px 0

            span
                font-weight 300
                font-size 60px
                line-height 50px

            p
                display inline-block
                padding 0 0 0 6px
                margin 0

            sup
            sub
                position static
                font-size 12px
                line-height 18px
                font-weight 700
                text-transform uppercase
                display block

        &-info
            small
                @extend .product__row-price small

            p
                font-size 12px
                line-height 18px
                color #adadad
                font-weight 500
                padding 0



        &-getorder

            small
                font-size 12px
                line-height 18px
                font-weight 500
                color #adadad
                display block
                margin 0 0 30px 0

            &-phone
                flexs(center-vertical)
                color #393939
                font-size 20px
                line-height 20px
                font-weight 600

                .svg
                    height 14px
                    margin 0 14px 0 0

            .product__minirow
                flexs(center-vertical)



    &__minirow
        flexs()

        &-left
            width 290px

        &-right
            width calc(100% - 290px)



    &__devants
        flexs()
        height 100%

        &-left
        &-right
            width 50%
            height 100%

        &-left
            padding-right 15px

        &-right
            padding-left 15px

    &__advantages
        background-color background-grey
        height 100%
        padding 0 30px
        border-radius $border-radius

        &-icon
        &-text
            flexs(center-vertical)

        &-icon
            width 55px
            justify-content center

        &-text
            width calc(100% - 80px)
            margin-left auto

        .svg
            height 42px

        ul
            flexs()
            flex-flow column nowrap
            justify-content space-between
            height 100%

            > li
                flexs(center-vertical)
                height 25%
                border-bottom 1px solid #c8c8c8

                &:last-child
                    border none

                > div
                    flexs()

                p
                    margin 0
                    padding 0
                    font-size 14px
                    line-height 20px
                    color #6e6e6e




    &__listing
        height 100%
        flexs()
        -webkit-flex-wrap wrap
        -ms-flex-wrap wrap
        flex-wrap wrap

        > li
            flexs()
            flex-flow column nowrap
            width 50%
            padding 0 15px
            margin 0 0 30px 0

            span
                display block
                font-weight 600
                font-size 13px
                color #393939

        &-image
            margin 0 0 10px 0
            height 150px

            img
                width 100%
                height 100%
                imagecover()
                position relative




    &__description
        margin-bottom 0




    @media screen and (max-width: 1680px)

        h1
            font-size 42px
            line-height 50px

        &__row

            &-left
                width (product-column-left - 200px)

            &-right
                width 'calc(100% - %s)' % (product-column-left - 200px)

            &-gallery
                height (product-column-height - 100px)

    @media screen and (max-width: 1480px)

        &__minirow

            &-left
                width 250px

            &-right
                width calc(100% - 250px)

    @media screen and (max-width: media-large)

        h1
            font-size 32px
            line-height 42px

        &__row

            &-left
                width (product-column-left - 300px)

            &-right
                width 'calc(100% - %s)' % (product-column-left - 300px)

            &-gallery
                height (product-column-height - 150px)

    @media screen and (max-width: 1300px)

        &__row

            &-left
                width (product-column-left - 400px)

            &-right
                width 'calc(100% - %s)' % (product-column-left - 400px)

            &-gallery
                flex-flow column nowrap
                height auto

                &-swiper
                    width 100%
                    margin 0 0 30px 0

                &-params
                    width 100%
                    padding 20px 15px

                    &-icon
                        height 30px

                    .svg
                        margin 0 0 8px 0
                        height 20px

                    > ul
                        flex-flow nowrap

                        > li
                            height 100%
                            width 33.322%
                            border none
                            border-right 1px solid #c8c8c8

                            strong
                                margin 0 0 5px 0


            &-detail
                &-footer
                    padding-bottom 0



        &__devants
            flex-flow column nowrap
            height auto

            &-left
            &-right
                width 100%
                padding-right 0
                padding-left 0

        &__advantages
            margin 0 0 30px 0

            ul

                > li
                    height auto
                    padding-top 25px
                    padding-bottom @padding-top


        &__listing

            > li
                width 25%
                margin-bottom 0

            &-image
                margin 0 0 12px 0
                height 100px

    @media screen and (max-width: media-md)

        h1
            font-size 28px
            line-height 38px

        &__row

            &-left
                width (product-column-left - 500px)

            &-right
                width 'calc(100% - %s)' % (product-column-left - 500px)
                padding-left 30px


            &-price

                span
                    font-size 48px
                    line-height 42px


            &-getorder

                &-phone
                    font-size 16px
                    line-height 18px


        &__minirow

            &-left
                width 210px

            &-right
                width calc(100% - 210px)

    @media screen and (max-width: media-sm)

        &__title
            display none

            &.hidden
                display block !important
                margin 0 0 30px 0

        &__row
            display block

            &-left
            &-right
                width 100%
                padding-left 0

            &-gallery

                &-params
                    padding-left 0
                    padding-right 0
                    margin-bottom 30px

            &-detail

                &-header
                    padding-bottom 15px

        &__listing
            margin-bottom 40px


    @media screen and (max-width: media-xs)

        h1
            font-size 24px
            line-height 34px

    @media screen and (max-width: 550px)

        &__listing
            margin-bottom 15px

            > li
                width 50%
                margin-bottom 30px

            &-image
                height 130px

    @media screen and (max-width: 500px)

        &__minirow
            flex-flow column nowrap

            &-left
            &-right
                width 100%

            &-left
                margin 0 0 30px

        &__row
            &-price
                opacity 1

            &-gallery

                &-params

                    ul

                        > li

                            strong
                            span
                                font-size 10px
                                line-height 10px

