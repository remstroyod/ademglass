.headpage
    margin 0 0 25px 0

    &__row
        flexs(center-vertical)
        height 80px
        background-color background-black
        padding 0 25px
        overflow hidden
        border-radius $border-radius

        &-right
            margin-left auto
            padding-left 30px

    /.catalogmenu

        &-swiper
            display block
            width 100%
            overflow hidden

            &-link
                width auto
                text-transform uppercase
                color text-color-grey
                font-weight 700
                font-size 11px
                line-height @font-size
                white-space nowrap
                @extend .links-grey
                -webkit-background-size 0% 100%
                background-size 0% 100%

                &:hover
                    -webkit-background-size 100% 100%
                    background-size 100% 100%

    @media screen and (max-width: media-sm)
        margin 0 0 30px 0

    @media screen and (max-width: media-xs)

        &__row

            &-right
                display none
