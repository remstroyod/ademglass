.download
    margin 0 0 35px 0

    &__inner
        background #fff
        border 2px solid #d1d1d1
        min-height 260px
        overflow hidden
        position relative
        flexs(center-vertical)
        flexs(justified, false)
        padding 15px 65px
        border-radius $border-radius

        &::after, &::before
            before-or-after-absolute()
            width 1000px
            height @width
            vendor(border-radius, 50%)

        &::before
            background-color #161616
            right -390px
            top -848px
            z-index 2

        &::after
            background-color #404040
            right -270px
            top -800px
            z-index 1

        &-title
            margin 0
            color text-color
            font-size 26px
            line-height @font-size * 1.3

        &-btn

            .btn
                margin 0 10px

                div
                    width 30px
                    height @width
                    vendor(border-radius, 50%)
                    background-color background-brown
                    position absolute
                    z-index 2
                    right - (@width / 2)
                    top @right
                    flexs(center-vertical)
                    justify-content center

                    .svg
                        height 12px

        > *
            position relative
            z-index 5

        img
            margin-top 12px

    @media screen and (max-width: media-md)

        &__inner
            padding-left 30px
            padding-right @padding-left

            &-title
                font-size 20px
                line-height @font-size * 1.25

            img
                max-width 250px

            .btn
                padding-right 20px
                padding-left @padding-right

    @media screen and (max-width: media-sm)

        &__inner
            flex-flow column nowrap
            justify-content center
            padding 50px

            &::before
            &::after
                width 400px
                height @width
                left 50%
                vendor(transform, translateX(-50%))
                top auto
                bottom -300px

            &::before
                bottom -350px

            img
                margin 0
                position relative
                vendor(transform, translateY(50px))
                max-width 100%

            &-title
                margin 0 0 50px 0
                text-align center

                br
                    display none

    @media screen and (max-width: 560px)

        &__inner

            &-btn
                width 100%

                .btn
                    display block
                    width 100%
                    padding-left 0
                    padding-right 0
                    margin 0 0 15px 0