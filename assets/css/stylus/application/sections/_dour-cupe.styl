.dour
    _border-color       = #c8c8c8
    _background-color   = #fafafa;

    &__cupe
        opacity 1

        img
            border-radius $border-radius

        &-type
            border 1px solid _border-color
            border-left none
            border-right @border-left
            padding 25px 0 0 0
            margin 0 0 40px 0

            &--row
                title-width = 200px

                flexs()
                margin 0 0 25px 0

                span
                    width title-width
                    padding 3px 0 0 0
                    font-weight 600
                    font-size 14px
                    line-height 18px

                ul
                    @extends .catalog__filter-clear
                    margin 0
                    width 'calc(100% - %s)' % title-width

        &-production
            border-bottom 1px solid _border-color
            padding 0 0 30px 0
            margin 0 0 30px 0

            &--title
                font-size 20px

            &--list
                font-weight 500
                font-size 13px
                line-height 18px
                counter-reset point
                padding 25px 0 0 0

                > li
                    position relative
                    padding 0 0 0 70px
                    margin 0 0 25px 0

                    &:last-child
                        margin 0

                    &::after
                    &::before
                        before-or-after-absolute()

                    &::after
                        height 1px
                        background-color #c8c8c8
                        width 16px
                        left 40px
                        top 10px


                    &::before
                        content counter(point, decimal-leading-zero)
                        counter-increment point 1
                        left 0
                        top -4px
                        vendor(border-radius, 50%)
                        width 30px
                        height @width
                        border 2px solid background-brown
                        text-align center
                        font-size 11px
                        font-weight 600
                        line-height @height - 3px

            &--imagelist
                img
                    width 100%
                    height 100%
                    imagecover()
                    border-radius $border-radius

                > li
                    display block
                    width 50%
                    padding 0 15px
                    float left
                    margin 0 0 20px 0
                    height 100px

            &--info
                height 340px
                background-color #404040
                text-align center
                flexs(center-vertical)
                vendor(justify-content, center)
                padding 0 30px
                border-radius $border-radius

                img
                .svg
                    height 50px

                span
                    font-weight 600
                    color #fff
                    display block
                    font-size 18px
                    line-height @font-size * 1.4
                    padding 25px 0 35px 0

                &---day
                    white-space nowrap
                    position relative

                    *
                        display inline-block
                        color color-brown

                    sup
                    sub
                        font-size 18px
                        line-height 16px
                        font-weight 600
                        text-transform uppercase

                    sup
                        vertical-align top

                    b
                        font-size 130px
                        line-height 70px

                        &::after
                        &::before
                            content attr(data-caption)
                            position absolute
                            color #fff
                            display block
                            top 50%
                            vendor(transform, translateY(-50%))

                        &::after
                            font-size 80px
                            left 10%
                            vendor(filter, blur(4px))
                            opacity 0.2

                        &::before
                            font-size 80px
                            right 15%
                            vendor(filter, blur(5px))
                            opacity 0.15

        &-materials
             border-bottom 1px solid _border-color
             padding 0 0 30px 0
             margin 0 0 30px 0


             &--title
                font-size 20px

             &--rows
                flexs()

                &---cell
                    border 1px solid _border-color
                    background-color _background-color
                    padding 25px
                    height 100%
                    text-align center
                    border-radius $border-radius

                    h6
                        margin 0 0 15px 0

                &---group
                    flexs()
                    vendor(flex-flow, column nowrap)
                    height 100%

                    > div

                        &:first-child
                            margin 0 0 30px 0

                &---gallery
                    padding 25px 0 0 0

                    h5
                        position relative
                        font-size 16px
                        line-height 18px

                        &::after
                            before-or-after-absolute()
                            height 1px
                            left 0
                            width 100%
                            background-color _border-color
                            top 50%
                            z-index 1

                        span
                            display inline-block
                            background-color _background-color
                            padding 0 20px
                            position relative
                            z-index 2

             &--swiper
                position relative

                .swiper-button-prev
                .swiper-button-next
                    background-color _background-color
                    border none
                    width 50px
                    height @width
                    line-height @height

                    .svg
                    img
                        height 10px

                .swiper-button-next
                     right -25px

                .swiper-button-prev
                    left -25px

        &-products
            border-bottom 1px solid _border-color
            margin 0 0 30px 0

            &--title
                font-size 20px
                line-height @font-size * 1.3
                margin 0 0 25px 0
                padding 15px 0


            &--list
                flexs()
                vendor(flex-wrap, wrap)

                > li
                    flexs()
                    width 25%
                    padding 0 15px
                    margin 0 0 40px 0

                .product__row-price
                    padding 15px 0 0 0

                    span
                        font-size 40px
                        line-height @font-size

                .catalog__list-card
                    display block
                    width 100%

                .catalog__list-card-image

                    img
                        imagecover()
                        width 100%
                        height 100%

        &-text
            border-bottom 1px solid _border-color
            margin 0 0 30px 0
            padding 30px 0

        &-variants

            &--title
                font-size 20px
                line-height @font-size * 1.3
                margin 0 0 25px 0
                padding 15px 0

            &--list
                flexs()
                vendor(flex-wrap, wrap)

                > li
                    flexs()
                    width 25%
                    padding 0 15px
                    margin 0 0 30px 0

                    .checkbox
                        position relative
                        margin 0
                        width 100%

                        [type="checkbox"]
                            display none

                            &:checked + label
                                background-color background-brown

                                &::before
                                    content "\f00c"
                                    font-family FontAwesome
                                    color #2e416e
                                    font-size 9px
                                    text-align center
                                    border-color #fff

                                .images
                                    border-color #fff
                                    vendor(box-shadow, 0px 0px 6px 0px rgba(0, 0, 0, 0.2))

                        label
                            background-color background-grey
                            padding 15px 15px 0 15px
                            margin 0
                            display: block
                            cursor pointer
                            position relative
                            color #171717
                            font-weight 700
                            border-radius $border-radius

                            &::before
                                before-or-after-absolute()
                                width 30px
                                height @width
                                border 1px solid _border-color
                                background-color #fff
                                vendor(border-radius, 50%)
                                top auto
                                left auto
                                right 15px
                                bottom 15px
                                line-height 28px

                        .images
                            background-color #fff
                            border 1px solid _border-color
                            padding 15px
                            height 195px
                            border-radius $border-radius

                        .name
                            padding 20px 0
                            font-size 16px
                            line-height 18px
                            color #000
                            font-weight 700






        &-formone
            background-image url("images/dour-cupe-formone-background.jpg")
            background-position center center
            vendor(background-size, cover)
            background-repeat no-repeat
            padding 60px 60px 30px 60px
            position relative
            margin 0 0 30px 0
            border-radius $border-radius

            &--title
                font-size 20px
                line-height @font-size * 1.3
                margin 0 0 25px 0
                color #fff

            &--form
                max-width 400px
                position relative
                z-index 2

            &--woman
                position absolute
                z-index 1
                right 0
                bottom 0

        &-photos
            padding 0 0 30px 0
            margin 0 0 30px 0
            border-bottom 1px solid _border-color

            &--title
                font-size 20px
                line-height @font-size * 1.3
                margin 0 0 25px 0
                padding 20px 0 30px 0

            &--list
                flexs()
                vendor(flex-wrap, wrap)

                > li
                    flexs()
                    width 14.28%
                    padding 0 15px
                    margin 0 0 30px 0

                    a
                        display block
                        width 100%

                        img
                            imagecover()
                            width 100%
                            height @width

        &-portfolio
            margin 0 0 40px 0

            &--titlerow
                flexs(center-vertical)
                margin 0 0 30px 0

                span
                    display inline-block
                    padding 0 0 0 30px
                    margin 0 0 0 30px
                    border-left 1px solid _border-color
                    color rgb(165, 165, 165)

            &--title
                font-size 20px
                line-height @font-size * 1.3
                margin 20px 0
                padding 0

            &--list
                flexs()
                vendor(flex-wrap, wrap)

                > li
                    flexs()
                    width 16.655%
                    padding 0 15px
                    margin 0 0 15px 0

                    &.end
                        width 33.322%
                        color #fff

                        > div
                            background-color background-brown
                            height 74%
                            padding 0 30px
                            font-size 16px
                            flexs(center-vertical)
                            width 100%

                            p
                                display block
                                margin 0 0 15px 0

                            strong
                                font-size 22px


                    &.video

                        div
                            background-color #000
                            display block
                            position relative
                            height auto
                            border-radius $border-radius

                        img
                            opacity .5
                            position relative
                            z-index 1

                        .btn
                            display block
                            padding 0
                            width 50px
                            height @width
                            vendor(border-radius, 50%)
                            border none
                            background-color background-brown
                            position absolute
                            z-index 2
                            top 50%
                            left 50%
                            vendor(transform, translateX(-50%) translateY(-50%))
                            line-height @height
                            text-align center
                            vendor(justify-content, center)

                            .fa
                                margin 0

                            &::after
                            &::before
                                before-or-after-absolute()
                                border 2px solid background-brown
                                width 150%
                                height @width
                                vendor(border-radius, 50%)
                                opacity 1
                                left -25%
                                top -25%
                                vendor(animation, 1s btn-play-anim linear infinite)

                            &::before
                                vendor(animation-delay, .5s)

                            @keyframes btn-play-anim{
                                0%{
                                    transform:scale(0.68)
                                }
                                100%{
                                    transform:scale(1.2)
                                    opacity:0
                                }
                            }

                    a
                        display block
                        width 100%

                span
                    display block
                    padding 16px 0px
                    font-size 15px
                    font-weight 600
                    white-space nowrap
                    overflow hidden
                    -o-text-overflow ellipsis
                    text-overflow ellipsis

        &-formtwo
            _column-width = 450px

            padding 80px 60px
            background-color #404040
            flexs(center-vertical)
            border-radius $border-radius

            &--left
                width _column-width
                padding 0 60px 0 0

                p
                    color #fff
                    font-weight 500
                    font-size 16px
                    line-height 22px
                    opacity .6

            &--right
                width 'calc(100% - %s)' % _column-width

                .form
                    max-width 600px
                    margin 0 auto

            &--title
                font-size 28px
                line-height @font-size * 1.3
                color color-brown



        &-titlebox
            _titlebox-width = 500px

            flexs()
            background-color #404040
            margin 0 0 30px 0
            border-radius $border-radius

            &--left
                width _titlebox-width

                img
                    imagecover()
                    width 100%
                    height 100%

            &--right
                width 'calc(100% - %s)' % _titlebox-width
                flexs(center-vertical)
                padding 0 30px 0 60px

                h2
                    color color-brown
                    font-size 22px
                    line-height @font-size * 1.3




        &-conversion
            background-image url("images/dour-cupe-conversion-background.jpg")
            background-repeat no-repeat
            background-position right center
            background-color background-grey
            padding 0px 60px
            flexs(center-vertical)
            height 300px
            border-radius $border-radius

            &--inner
                max-width 400px


        &-sheme
            _sheme-width = 380px

            ol
                position relative
                padding 30px 0 0 0
                list-style none
                counter-reset point
                z-index 1

                &::after
                    before-or-after-absolute()
                    width 1px
                    left _sheme-width
                    top 0
                    bottom 0
                    background-color _border-color

                > li
                    flexs()
                    margin 0 0 50px 0

                    &::before
                        content counter(point, decimal-leading-zero)
                        counter-increment point 1
                        width 30px
                        height @width
                        display block
                        vendor(border-radius, 50%)
                        border 2px solid background-brown
                        background-color #fff
                        text-align center
                        line-height @height - 3px
                        font-size 11px
                        color #404040
                        font-weight 700
                        top 0px
                        position absolute
                        z-index 2
                        left _sheme-width - (@width / 2)

            &--left
                width _sheme-width
                font-size 18px
                line-height @font-size * 1.3
                font-weight 600
                text-align right
                padding 4px 40px 0 0

            &--right
                width 'calc(100% - %s)' % _sheme-width
                position relative
                padding 6px 0 0 130px

                &::after
                    before-or-after-absolute()
                    height 1px
                    background-color _border-color
                    width 25px
                    left 25px
                    top 15px

                .svg
                    height 35px
                    position absolute
                    left 60px
                    top -2px

                &---gallery
                    position relative
                    margin-left -4px
                    margin-right -4px
                    padding 0px 0 0 0

                    > li
                        display inline-block
                        padding 0 4px



    @media screen and (max-width: 1460px)

        &__cupe-formone--woman
            right -150px

    @media screen and (max-width: 1360px)

        &__cupe

            &-formone--woman
                right -200px

            &-production--list
                padding 0

            &-formtwo

                &--left
                    width 350px
                    padding 0 30px 0 0

                &--right
                    width calc(100% - 350px)

            &-titlebox

                &--left
                    width 400px

                &--right
                    width calc(100% - 400px)

                    h2
                        font-size 18px
                        line-height @font-size * 1.4



    @media screen and (max-width: media-md)

        &__cupe

            &-formone--woman
                right -230px

            &-formtwo

                &--left
                    width 300px

                &--right
                    width calc(100% - 300px)

            &-titlebox

                &--left
                    width 340px

                &--right
                    width calc(100% - 340px)


            &-sheme
                _left-width = 280px

                ol

                    &::after
                        left _left-width

                    > li

                        &::before
                            left _left-width - 15px

                &--left
                    width _left-width
                    font-size 16px
                    line-height @font-size * 1.4

                &--right
                    width 'calc(100% - %s)' % _left-width
                    padding-left 120px


    @media screen and (max-width: media-sm)

        &__cupe

            &-formone--woman
                display none

            &-type

                &--row
                    vendor(flex-flow, column nowrap)
                    margin 0 0 15px 0

                    span
                        padding 0 0 15px 0
                        width 100%

                    ul
                        width 100%

            &-production

                &--list
                    margin 0 0 50px 0

            &-formone--form
                margin 0 auto

            &-portfolio

                &--titlerow
                    vendor(flex-flow, column nowrap)

                    span
                        border none
                        margin 0
                        padding 0

                &--list

                    > li
                        width 20%

                        &.end
                            width 100%
                            margin-bottom 0

                            > div
                                font-size 14px
                                padding 60px 30px
                                text-align center
                                height 100%

                                > div
                                    width 100%

            &-formtwo
                vendor(flex-flow, column nowrap)

                &--left
                &--right
                    width 100%
                    text-align center

                &--left
                    margin 0 0 40px 0
                    padding 0

    @media screen and (max-width: 800px)

        &__cupe

            &-titlebox
                vendor(flex-flow, column nowrap)

                &--left
                &--right
                    width 100%

                &--right
                    padding 40px 30px
                    text-align center

            &-conversion--inner
                margin 0 auto
                text-align center

    @media screen and (max-width: media-xs)

        &__cupe

            &-materials

                &--rows
                    vendor(flex-flow, column nowrap)

                    &---cell
                        margin 0 0 30px 0

                &--swiper

                    .swiper-slide

                        img
                            margin 0 auto

            &-products--list > li
                width 50%

            &-variants--list > li
                width 50%

            &-photos--list > li
                width 33.322%


            &-sheme

                ol

                    &::after
                        display none

                    > li
                        vendor(flex-flow, column nowrap)
                        padding 50px 0 0 0
                        margin 0 0 20px 0

                        &::before
                            left 50%
                            margin-left -15px
                            top 0

                &--left
                &--right
                    width 100%
                    text-align center
                    padding 0

                &--left
                    margin 0 0 25px 0

                &--right

                    &::after
                        display none

                    .svg
                        position static



    @media screen and (max-width: 680px)

        &__cupe

            &-portfolio

                &--list

                    > li
                        width 33.322%

    @media screen and (max-width: 460px)

        &__cupe

            &-products--list

                > li
                    width 100%

                .catalog__list-card-title
                    height auto

            &-variants--list > li
                width 100%

            &-photos--list > li
                width 50%

            &-portfolio

                &--list

                    > li
                        width 50%

            &-formtwo
                padding 30px
