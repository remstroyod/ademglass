.rezka
    position relative
    margin -50px 0 0 0

    &__intro
        background-repeat no-repeat
        background-position center right
        background-size cover
        background-color #404040
        margin 5px 0 50px 0
        border-radius $border-radius

        &-container
            height 500px
            padding 50px
            max-width 800px
            display flex
            flex-flow column nowrap
            justify-content space-between

            h1
                color color-brown

            ul
                $icon-size = 60px
                display flex
                color #fff
                max-width 800px

                > li
                    display flex
                    align-items center
                    font-size 20px
                    line-height @font-size * 1.3
                    font-weight 600
                    margin 0 30px 0 0

                .fa
                    width $icon-size
                    height $icon-size
                    border-radius 50%
                    color color-brown
                    border 2px dotted #fff
                    text-align center
                    line-height $icon-size - 5px
                    margin 0 12px 0 0

                span
                    width 'calc(100% - %s)' % $icon-size




    &__one
        text-align center
        margin 0 0 90px 0

        &-title
            max-width 800px
            margin 0 auto 50px auto

        &-list
            display flex
            flex-wrap wrap

            > li
                display flex
                flex-flow column nowrap
                width 33.2%
                padding 0 15px
                margin 0 0 50px 0

                span
                    color #404040
                    font-size 18px
                    font-weight 700
                    display block
                    margin 0 0px 12px 0
                    position relative

                    &::after
                        content ''
                        display block
                        height 2px
                        width 25px
                        margin 8px auto 0 auto
                        background-color background-brown

                p
                    color #a0a0a0
                    font-weight 500
                    font-size 14px
                    line-height @font-size * 1.3
                    display block
                    max-width 300px
                    margin 0 auto

            &--image
                width 180px
                height @width
                margin 0 auto 20px auto
                overflow hidden
                background-color #ebebeb
                opacity 0.75

                img
                    border-radius $border-radius

    &__two
        margin 0 0 50px 0

        &-title
            max-width 800px
            margin 0 auto 60px auto
            position relative
            text-align center

            &::after
            &::before
                before-or-after-absolute()
                z-index -1

            &::after
                height 1px
                background-color background-brown
                top 22px
                left 0
                right 0

            &::before
                left 0
                right 0
                background url('images/rezka-title-check.png') center top no-repeat
                height 130px
                top -50px

            span
                background-color #fff
                display inline-block
                padding 5px 30px
                position relative
                z-index 2

        &-text
            text-align center
            color #a0a0a0
            font-weight 500
            font-size 15px
            line-height @font-size * 1.6
            margin 0 0 50px 0

        &-list
            display flex
            flex-wrap wrap
            text-align center
            max-width 1000px
            margin 0 auto

            > li
                display flex
                flex-flow column nowrap
                border 1px solid background-brown
                border-top none
                border-bottom none
                width 50%
                padding 20px 0
                position relative

                + li
                    margin-left -1px

                &:first-child
                    border-left none

                &:last-child
                    border-right none

                p
                    text-transform uppercase
                    letter-spacing 0.4em
                    font-size 13px
                    line-height @font-size
                    font-weight 600
                    margin 0 0 12px

                strong
                    font-size 110px
                    line-height @font-size
                    color color-brown

                span
                    color #a0a0a0
                    font-weight 500
                    font-size 20px





    &__three
        background-color #404040
        padding 60px
        border-top-left-radius $border-radius
        border-top-right-radius $border-radius

        &-list
            display flex
            flex-wrap wrap
            text-align center

            > li
                display flex
                flex-flow column nowrap
                width 50%
                border 1px solid rgba(255, 255, 255, .1)
                border-top none
                border-bottom none
                position relative
                padding 40px 30px

                + li
                    margin-left -1px

                &:first-child
                    border-left none

                &:last-child
                    border-right none

                > div
                    max-width 500px
                    margin 0 auto

            span
                display block
                color color-brown
                font-size 20px
                line-height @font-size * 1.5
                font-weight 700
                margin 0 0 30px 0

            p
                color #fff
                opacity .7
                font-weight 500
                font-size 16px
                line-height @font-size * 1.6
                padding 30px 0 0 0




    &__four
        background-color background-brown
        text-align center
        padding 50px 0

        &-title
            margin 0 0 70px 0

        &-list
            max-width 1300px
            margin 0 auto
            padding 0
            position relative

            > li
                position relative
                text-align center
                display inline-block
                vertical-align top
                width 210px
                margin-bottom 50px
                padding 0 10px

                span
                    display block
                    color #fff
                    font-size 16px

                img
                    margin 36px auto 40px auto
                    position relative
                    z-index 4

            input[type=checkbox]
                display none

                &:checked

                    + label

                        &::after
                            background-color rgba(255, 255 ,255, .4)
                            border-style solid

                        &::before
                            content "\e013"
                            font-family 'Glyphicons Halflings'
                            font-size 9px
                            background-color #fff
                            line-height 23px

            label
                display block
                cursor pointer
                width 200px
                height auto
                text-align center
                margin 0 auto
                padding 0
                position relative

                &::before
                &::after
                    before-or-after-absolute()

                &::before
                    width 30px
                    height @width
                    border 3px solid #000
                    border-radius 50%
                    background-color background-brown
                    left 50%
                    margin-left -14px
                    position absolute
                    z-index 5
                    top -13px
                    text-align center

                &::after
                    width 130px
                    height @width
                    border-radius 50%
                    border 3px dotted #000
                    top 0
                    left 50%
                    margin-left -65px
                    z-index 3




        &-footer

            .btn
                padding-left 80px
                padding-right @padding-left



    &__five
        background-color background-grey
        padding 50px
        text-align center

        &-title
            margin 0 0 60px 0

        &-list
            display flex
            flex-wrap wrap

            > li
                display flex
                padding 0 15px
                width 25%
                justify-content center
                margin 0 0 40px 0

            &--title
                padding 30px 15px 30px 15px
                font-weight 700
                font-size 14px
                line-height @font-size * 1.5

            &--image
                padding 0 15px

                img
                    opacity 0.75
                    border-radius $border-radius


            input[type=checkbox]
                display none

                &:checked

                    + label
                        border-color background-brown

                        img
                            opacity 1

                        &::before
                            content "\e013"
                            font-family 'Glyphicons Halflings'
                            border-color background-brown
                            background-color @border-color
                            color #fff
                            font-size 9px
                            text-align center
                            line-height 26px

            label
                width 100%
                position relative
                z-index 2
                display block
                border 1px solid #bcbcbc
                text-align center
                padding 0 0 30px 0
                margin 0 auto
                background-color background-grey
                cursor pointer
                border-radius $border-radius


                &::before
                    before-or-after-absolute()
                    width 30px
                    height @width
                    border 2px solid #bcbcbc
                    left 50%
                    margin-left -15px
                    top -15px
                    background-color background-grey
                    border-radius 50%

    &__six
        background-color #404040
        padding 50px

        &-title
            text-align center
            color color-brown

        &-form
            max-width 800px
            margin 0 auto

            p
                color #fff
                font-weight 500
                font-size 14px
                text-align center
                line-height @font-size * 1.6
                display block
                opacity .4
                margin 0 0 30px 0

            small
                font-size 12px
                line-height @font-size * 1.6
                color color-brown
                display block
                text-align center



    @media screen and (max-width: 1300px)

        &__intro
            background-position center left

        &__five

            &-list

                > li
                    width 33.222%

    @media screen and (max-width: media-md)
        opacity 1

    @media screen and (max-width: media-sm)

        &__intro
            background-image none !important

            &-container
                height auto
                text-align center
                justify-content center
                max-width none

                h1
                    margin 0 0 60px 0

                ul
                    max-width none
                    justify-content center

                    > li
                        flex-flow column nowrap
                        margin 0
                        padding 0 15px

                    .fa
                        margin 0 0 15px 0


        &__one
            &-list

                > li

                    span
                        font-size 15px

                    p
                        font-size 13px

        &__two
            &-list

                > li

                    span
                        font-size 16px

                    strong
                        font-size 80px
                        line-height @font-size

                    p
                        font-size 11px
                        line-height @font-size

        &__three
            padding 30px 0

            &-list

                p
                    font-size 14px
                    line-height @font-size * 1.5

                span
                    font-size 18px
                    line-height @font-size * 1.5

        &__five
            &-list

                > li
                    width 50%

    @media screen and (max-width: media-xs)

        &__intro

            &-container
                padding 30px

                h1
                    font-size 26px
                    margin 0px 0px 30px 0

                ul
                    > li
                        font-size 15px
                        line-height @font-size * 1.3


        &__one

            &-list

                > li
                    width 50%

        &__two

            &-title::after
                display none

            &-list

                > li
                    width 100%
                    border none
                    padding 30px 0px

                    + li
                        margin 0

                    &:first-child
                        border-bottom 1px solid background-brown


        &__three

            padding 30px

            &-list

                > li
                    width 100%
                    border none
                    padding 30px 0px

                    + li
                        margin 0

                    &:first-child
                        border-bottom 1px solid rgba(255, 255, 255, .15)

    @media screen and (max-width: 630px)

        &__five

            &-list

                > li
                    width 100%

    @media screen and (max-width: 580px)

        &__intro

            &-container
                padding 0 30px 30px 30px

                h1
                    font-size 20px
                    line-height @font-size * 1.4

                ul
                    flex-flow column nowrap

                    > li
                        width 100%

                        &:not(:last-child)
                            margin 0 0 30px 0

    @media screen and (max-width: 480px)

        &__one-list > li
            width 100%
