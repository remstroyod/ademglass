.jobs

    &__list

        > li
            margin-bottom 60px

        &-card

            &--date
                padding 25px 0 20px 0
                font-size 11px
                line-height @font-size
                color #959595
                font-weight 500
                letter-spacing .1em

            &--title
                lnk(#d5d5d5)
                font-weight 500
                color #636363
                font-size 24px
                line-height 38px
                color #252525

                &:hover
                    -webkit-background-size 0% 100%
                    background-size 0% 100%

            &--except
                max-height 80px
                color #9c9c9b
                font-size 13px
                line-height 22px
                margin 0px 0 25px 0

    @media screen and (max-width: 430px)

        &__list

            > li
                margin-bottom 40px