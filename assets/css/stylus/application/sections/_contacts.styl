.contacts
    contact-phone-width = 260px

    &__map
        height 430px
        margin 0 0 0px 0
        border-radius $border-radius
        overflow hidden

    &__social
        @extends .footer__row-contacts-social

    &__contact
        margin 0 0 80px 0

        &-title
            margin 0 0 70px 0

            span
                margin-bottom 0
                padding-top 7px

        &-info
            padding 8px 0 0 0

            &--icon
                flexs(center-vertical)
                width 40px
                height 15px
                padding 8px 0 0 0

                .svg
                    height 15px

                    &.envelope
                        height 12px

            > li
                flexs()
                margin 0 0 20px 0
                font-weight 500
                font-size 14px
                color #747474
                line-height 22px

                &:last-child
                    margin-bottom 0

                a
                    color color-brown
                    lnk(color-brown)

                    &.email
                        font-weight 600



        &-phone
            > li
                flexs()
                margin 0 0 15px 0

                &:last-child
                    margin-bottom 0

            &--tel
                width contact-phone-width
                font-weight 700
                font-size 22px
                line-height 23px
                color #404040

            &--title
                flexs(center-vertical)
                width 'calc(100% - %s)' % contact-phone-width
                position relative
                font-weight 500
                font-size 12px
                line-height 18px
                color #838383

                &::before
                    before-or-after-absolute()
                    height 1px
                    background-color background-brown
                    width 15px
                    left -30px



    @media screen and (max-width: media-md)

        &__contact

            &-title
                margin 0 0 50px 0

                span
                    font-size 16px

    @media screen and (max-width: media-sm)

        &__map
            height 360px
            margin 0 0 30px 0

    @media screen and (max-width: media-xs)

        &__contact

            &-title
                margin 0 0 30px 0

            &-info
                margin 0 0 40px 0

    @media screen and (max-width: 500px)

        &__contact

            &-phone

                > li
                    flex-flow column nowrap

                &--tel
                &--title
                    width 100%

                &--title
                    padding 10px 0 0 0

                    &::before
                        display none