header {
    z-index; 5;
    padding; padd-top 0 0 0;
}

.header {
    header-logo-width = 243px;
    header-logo-width-1340 = 200px;
    header-logo-width-md = 140px;
    header-contacts-width = 400px;
    header-contacts-width-1340 = 340px;
    header-contacts-width-md = 280px;

    &__top {

        &-row {
            flexs(center-vertical);
            vendor(justify-content, space-between);
            height: 120px;
            border-bottom: 1px solid #cdcac8;
            @media screen and (max-width: media-md) {
                height: 80px;
            }
        }

    }


    &__bottom {

        &-row {
            height: 60px;
            flexs(center-vertical);
            vendor(justify-content, center);
        }

    }


    &__logo {
        width: header-logo-width;
        flexs(center-vertical);
        @media screen and (max-width: 1340px) {
            width: header-logo-width-1340;
        }
        @media screen and (max-width: media-md) {
            width: header-logo-width-md;
        }

        &-white {
            display none
        }
    }


    &__nav {
        width: 'calc(100% - %s)' % (header-logo-width +  header-contacts-width);
        padding: 0 35px 0 45px;
        @media screen and (max-width: 1340px) {
            width: 'calc(100% - %s)' % (header-logo-width-1340 +  header-contacts-width-1340);
            padding: 0 20px;
        }
        @media screen and (max-width: media-md) {
            width: 'calc(100% - %s)' % (header-logo-width-md +  header-contacts-width-md);
        }

        &-list {
            width: 100%;
            flexs(center-vertical);
            vendor(justify-content, space-between);
            position: relative;

            > li:not(.catalog_link),
            > li:not(.catalog_link) > a {
                color: #585151;
                font-weight: 500;
                font-size: 14px;
                @media screen and (max-width: media-md) {
                    font-size: 13px;
                }

            }
            > li {
                position: relative;

                > a {
                    white-space: nowrap;

                    &:hover {
                        color: color-brown;
                    }
                }

                &.catalog_link {
                    font-weight: 700;
                    font-size: 18px;
                    color: color-brown;
                    @media screen and (max-width: media-md) {
                        font-size: 13px;
                    }

                    > a {
                        color: color-brown;
                        padding: 0 0 0 28px;
                        background: url('images/icon_header_catalog.png') left center no-repeat;
                    }

                }

                &.current_page_item {
                    > a {
                        color: color-brown;
                    }
                }

                &:hover {
                    > ul {
                        display: block;
                    }
                }

                > ul {

                    position: absolute;
                    z-index: 80;
                    width: 770px;
                    left: 0;
                    top: 100%;
                    background-color: #f8f8f8;
                    vendor(box-shadow, 0px 10px 45px 0px rgba(182, 182, 182, 0.25));
                    vendor(border-radius, $border-radius-element);
                    vendor(column-count, 3);
                    vendor(column-gap, 30px);
                    padding: 40px 40px 15px 40px;
                    display: none;

                    > li {
                        margin: 0 0 15px 0;
                        vendor(break-inside, avoid);
                        vendor(page-break-inside, avoid);
                        vendor(break-inside, avoid);

                        > a {
                            font-size: 14px;
                        }

                        > ul {
                            font-size: 14px;
                            padding: 15px 0 0 0;

                            > li {
                                &:not(:last-child) {
                                    margin: 0 0 4px 0;
                                }

                                ul {
                                    padding: 8px 0 8px 8px;
                                }
                            }

                            a {
                                font-weight: normal;
                            }
                        }
                    }
                }
            }
        }
    }


    &__contacts {
        width: header-contacts-width;
        flexs(center-vertical);
        vendor(justify-content, space-between);
        @media screen and (max-width: 1340px) {
            width: header-contacts-width-1340;
        }
        @media screen and (max-width: media-md) {
            width: header-contacts-width-md;
        }

        &-city {
            position: relative;

            &-dropdown {
                flexs(center-vertical);
                background-color: #f4f4f4;
                vendor(border-radius, $border-radius-element);
                padding: 6px 15px;
                color: #b8b1b1;
                font-weight: 500;
                font-size: 14px;
                white-space: nowrap;
                @media screen and (max-width: 1340px) {
                    font-size: 12px;
                }
                @media screen and (max-width: media-md) {
                    padding: 4px 5px;
                }

                .fa {
                    font-size: 18px;
                    margin: 0 0 0 10px;
                    @media screen and (max-width: media-md) {
                        margin: 0 0 0 4px;
                    }
                }
            }

            &-list {
                margin-top: -34px;
                vendor(border-radius, $border-radius-element);
                overflow: hidden;
                background-color: #f8f8f8;
                font-size: 14px;

                > li,
                > li > a {
                    color: #b8b1b1;

                    &:hover {
                        color: color-brown;
                    }
                }
            }
        }

        &-phone {
            flexs(center-vertical);
            vendor(justify-content, space-between);

            &-right {
                flexs();
                vendor(flex-direction, column);
                vendor(justify-content, flex-end);
                vendor(align-items, flex-end);
            }

            a {
                text-align: right;
            }

            &-social {
                margin: 0 29px 0 0;
                @media screen and (max-width: 1340px) {
                    margin: 0 15px 0 0;
                }
                @media screen and (max-width: media-md) {
                    margin: 0 10px 0 0;
                }
            }

            &-tel {
                font-weight: 700;
                font-size: 20px;
                color: color-brown;
                margin: 0 0 10px 0;
                white-space: nowrap;
                @media screen and (max-width: 1340px) {
                    font-size: 18px;
                    margin: 0;
                }
                @media screen and (max-width: media-md) {
                    font-size: 16px;
                }
            }

            &-email {
                font-weight: 300;
                color: #838383;
                font-size: 14px;
                @media screen and (max-width: 1340px) {
                    font-size: 12px;
                }
            }
        }
    }


    &__menu {
        flexs(center-vertical);
        @media screen and (max-width: 1320px) {
            width: 100%;
            vendor(justify-content, space-between);

        }

        > li,
        > li > a {
            font-weight: 500;
            font-size: 18px;
            color: #404040;
            white-space: nowrap;
            @media screen and (max-width: media-md) {
                font-size: 14px;
            }
        }

        > li {
            padding: 0 28px;
            @media screen and (max-width: 1320px) {
                padding: 0;
            }

            &:last-child {
                padding-right: 0;
            }

            &:first-child {
                padding-left: 0;
            }

            > a {
                &:hover {
                    color: color-brown;
                }
            }

            &.calculator_link {

                > a {
                    color: color-brown;
                    padding-right: 44px;
                    background: url('images/icon_calc_gradient.png') right center no-repeat;
                }
            }

        }
    }


    &__search {
        margin: 0 0 0 60px;
        position: relative;

        [type="submit"] {
            position: absolute;
            z-index: 3;
            width: 50px;
            top: 0;
            bottom: 0;
            right: 0;
            outline: none;
            border: none;
            background: none;

            &:hover {
                color: color-brown;
            }
        }

        [type="text"] {
            position: relative;
            z-index: 1;
            background: #f4f4f4;
            vendor(border-radius, $border-radius-element);
            border: none;
            outline: none;
            height: 36px;
            padding: 0 50px 0 25px;
            line-height: 36px;
            font-size: 14px;
            color: #8c8c8c;

            &::placeholder {
                color: #8c8c8c;
            }
        }
    }



    .openMenu {
        display: none;
    }







    .openMenu {

    }

}


.mobilemenu {
    display: none;
}

.megamenu
    z-index 4
    background-color transparent
    padding 180px 50px 0 50px
    opacity 0
    bottom -100%
    position fixed
    width 100%
    left 0
    height 100%
    vendor(transition, opacity .3s ease)

    &::after
        before-or-after-absolute()
        background-color #393939
        //border 30px solid #fff
        left 0
        top 0
        height 100%
        width 100%
        z-index -1

    /.menucatalog__active &
        opacity 1
        bottom 0

    &__inner
        flexs()
        -webkit-box-orient horizontal
        -webkit-box-direction reverse
        -ms-flex-direction row-reverse
        flex-direction row-reverse
        opacity 0
        vendor(transition, all .6s ease)
        transition-delay .3s
        vendor(transform, translateY(20px))

        /.menucatalog__active &
            opacity 1
            vendor(transform, translateX(0px))

        &-left
            width 'calc(100% - %s)' % header-logo-width
            margin-left 70px
            overflow auto
            height calc(100vh - 230px)
            @extend .scrollbar

        &-right
            width header-logo-width

    &__menu
        margin: 0;
        padding: 0;
        vendor(column-count, 3)
        vendor(column-gap, 100px)

        > li
            width 100%
            display inline-block
            margin 0 0 50px 0

            > a
                @extends .links
                color color-brown
                font-weight 700
                font-size 15px
                line-height @font-size * 1.3

            ul
                padding 25px 0 0 0

                > li

                    &:not(:last-child)
                        margin 0 0 10px 0

                    > a
                        @extends .links-grey
                        color #cecece
                        font-size 13px
                        line-height @font-size * 1.3
                        font-weight 500


    &__download

        .btn
        margin 0 0 20px 0

        > div
            background-color #808080
            width 100%
            height header-logo-width
            position relative
            margin 0 0 20px 0

            img
                position absolute
                left 50%
                top 55%
                vendor(transform, translateY(-50%) translateX(-50%))
                max-width 115%

    .btn-opacity
        color color-brown


.menu__active

    .mobilemenu
    .mobilemenu__close
        vendor(transform, translateX(0%))
