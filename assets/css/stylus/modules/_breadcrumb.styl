.breadcrumb
    padding 0
    margin 0
    vendor(border-radius, 0px)
    background none
    white-space nowrap

    > li
        text-transform uppercase
        font-weight 600
        font-size 10px
        line-height @font-size
        color color-brown
        letter-spacing .3em

        +li

            &::before
                content ''
                display none

        &:first-child

            &::before
                content ''
                width 28px
                height 9px
                background url("images/breadcrumb-arrow.png") center center no-repeat
                display inline-block
                margin 0 6px 0 0
                position relative
                top 1px
                vendor(transition, transform .3s ease)
                will-change transform

            &:hover

                &::before
                    vendor(transform, translateX(-8px))

        &::after
            content "/\00a0"
            color #ececec
            opacity .4
            display inline-block
            padding 0 6px
            font-weight 300

        > a
            color @color
