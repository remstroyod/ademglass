/** BTN **/
.btn
    font-family font
    position relative
    z-index 1
    vendor(border-radius, 2px)
    color #fff
    font-weight 600
    font-size 12px
    padding 24px 40px
    white-space nowrap
    height 60px
    text-decoration none
    text-transform none
    letter-spacing .05em
    border none
    border-radius $border-radius-element
    background-color color-brown
    border-color color-brown
    line-height 1

    &:hover
        color #fff

    &-opacity
        background-color transparent
        color text-color
        border 2px solid color-brown

        &:hover
            color #fff
            background-color color-brown

    &-white
        background-color #fff
        color #404040
        border-color @background-color

        &:hover
            background-color #404040
            border-color @background-color
            color color-brown

    &-sm
        height 40px
        font-size 12px
        padding 14px 30px

    &-shadow
        vendor(box-shadow, 0px 25px 50px 0px rgba(62, 56, 53, 1))

        &-light
            vendor(box-shadow, 0px 25px 50px 0px rgba(53, 38, 32, 0.2))

    .fa
        margin 0 0 0 25px
        vendor(transition, transform .16s linear)
        will-change transform

        ^[-1]:hover

            .fa
                vendor(transform, translateX(5px))

    &-block
        padding-left 0px
        padding-right 0px
        display block
        width 100%

    &-vertical
        flexs('', 'inline')
        flexs(center-vertical, false)
        padding-top 0
        padding-bottom 0


    &-animate
        background: linear-gradient(90deg, #d78a6e, #f6beaa, #cd6b48, #d78a6e);
        background-size: 200%;
        animation: animate 10s linear infinite;




    @keyframes animate {
        0% {
            background-position: 0%;
        }
        100% {
            background-position: 400%;
        }
    }

/** END BTN **/

/** FORM CONTROL **/
button
    outline none !important
/.form
    font-size-form = 14px
    placeholder-form-color = #a1a1a1
    border-color-input = #bcbcbc

    label
        font-weight 500
        font-size font-size-form
        line-height @font-size * 1.1
        margin 0
        vendor(transition, top 200ms)
        position absolute
        top 10px
        left 0
        opacity 0
        z-index -1
        color placeholder-form-color

        &.floating
            top 1px
            z-index 1
            opacity 1.0
            color color-brown

    &-group
        margin-bottom 30px
        position relative

        b
            font-weight 500
            color #ff4343
            position absolute
            z-index 2
            right 0
            top 25px
            font-size 14px

    &-nomargin
        margin 0


    &-control
        border none
        border-bottom 1px solid border-color-input
        vendor(border-radius, 0px)
        height 60px
        vendor(box-shadow, none)
        color text-color
        background-color transparent
        padding 0
        font-weight 500
        font-size font-size-form
        margin 0

        +placeholder()
            color placeholder-form-color
            font-weight 500
            font-size font-size-form

        &-white
            color #fff
            border-bottom-width 2px

            +placeholder()
                color #fff
                font-size font-size-form
                opacity .6

        &-lg
            height 60px

        &:focus
            border-color background-brown
            vendor(box-shadow, none)

    textarea
        resize none

    &-checkbox, &-radio

        input

            &[type="checkbox"]
            &[type="radio"]
                position absolute
                z-index -1000
                left -1000px
                overflow hidden
                clip rect(0 0 0 0)
                height 1px
                width @height
                margin -1px
                padding 0
                border 0

                + label
                    display block
                    cursor pointer
                    font-weight 500
                    position relative
                    padding 3px 0 0 40px

                    &::before
                        display block

        &[type="radio"]

            + label

                padding 0 0 0 36px

    &-checkbox, &-radio

        label
            font-size 13px
            line-height @font-size * 1.5
            color #a5a5a5
            opacity 1
            position relative
            top auto
            left auto
            z-index 2

            &::before
                before-or-after-absolute('\f111')
                font-family FontAwesome
                width 20px
                height @width
                background-color transparent
                border 2px solid border-color-input
                left 0
                color #d6d6d6
                font-size 7px
                text-align center
                line-height @width - 3

    &-checkbox

        label

            &::before
                top 3px
                border-radius $border-radius

        &-center

            input[type="checkbox"]

                + label
                    padding 30px 0 0 0

                    &::before
                        top 0
                        left 50%
                        margin-left -10px

    &-radio, &-checkbox

        input

            &[type="checkbox"], &[type="radio"]

                &:checked

                    + label

                        &::before
                            background-color background-brown
                            border-color @background-color
                            color #fff


    &-radio

        label

            &::before
                top -3px
                width 23px
                height @width
                line-height @width - 3
                vendor(border-radius, 50%)


/** END FORM CONTROL **/
