.readmore
    position relative
    overflow hidden
    padding-bottom 30px
    margin-bottom 50px

    &-text
        position relative
        z-index 1

        &-link
            position absolute
            z-index 5
            bottom -20px
            left 0
            right 0
            height 150px

            a
                position absolute
                left 0
                bottom 15px
                z-index 10
                font-size 13px
                line-height @font-size
                font-weight 600
                color #393939
                border-bottom 1px dashed

                &::after
                    before-or-after-absolute('\f107')
                    font-family FontAwesome
                    width 24px
                    height @width
                    vendor(border-radius, 50%)
                    background-color background-brown
                    color #fff
                    text-align center
                    position absolute
                    right -35px
                    top 50%
                    margin-top -12px
                    line-height @width
                    font-size 12px

            &-open

                background -moz-linear-gradient(top,  rgba(255,255,255,0) 0%, rgba(255,255,255,0.9) 38%, rgba(255,255,255,1) 100%)
                background -webkit-linear-gradient(top,  rgba(255,255,255,0) 0%,rgba(255,255,255,0.9) 38%,rgba(255,255,255,1) 100%)
                background linear-gradient(to bottom,  rgba(255,255,255,0) 0%,rgba(255,255,255,0.9) 38%,rgba(255,255,255,1) 100%)

            &-close

                a

                    &::after
                        content '\f106'