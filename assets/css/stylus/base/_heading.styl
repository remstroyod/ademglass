for i in 1..6
    h{i}, .h{i}
        font-size 18px + 6 * (6 - i)
        line-height (@font-size * 1.3)
        color #111
        margin 0 0 30px 0
        position relative
        display block
        font-weight 700

@media screen and (max-width: media-large)
    for i in 1..6
        h{i}, .h{i}
            font-size 18px + 4 * (6 - i)
            line-height (@font-size * 1.2)

@media screen and (max-width: media-sm)
    for i in 1..6
        h{i}, .h{i}
            font-size 16px + 3 * (6 - i)
            line-height (@font-size * 1.2)
            margin 0 0 25px 0
